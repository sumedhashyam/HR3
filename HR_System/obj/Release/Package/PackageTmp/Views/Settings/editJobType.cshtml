@model DAO.JobType
@{
    ViewBag.Title = "editJobType";
    Layout = "~/Views/Shared/Main_Layout.cshtml";
}

@*<h2>Edit Job Type</h2>*@
<script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@{Html.RenderPartial("Notification");}
<div class="mws-panel grid_8" style="text-align: right; box-shadow: none;">
    @* @Html.ActionLink("Back", "JobType", "Settings", null, new { @class = "btn btn-primary" })*@
</div>
<div class="mws-panel grid_8">
    <div class="mws-panel-header">
        <span style="width: 200px; display: inline-block;"><i class="icon-ok"></i>Edit Job Type</span>
        <div class="toolbar">
            @Html.ActionLink("Back", "JobType", "Settings", null, new { })
        </div>
    </div>
    <div class="mws-panel-body no-padding">

        @using (Html.BeginForm("editJobType", "Settings", FormMethod.Post, new { @class = "mws-form" }))
        {
            @Html.ValidationSummary(true)

            @Html.HiddenFor(model => model.JobTypeID);
            <div id="mws-validate-error" class="mws-form-message error" style="display: none;"></div>
            <div class="mws-form-inline">
                <div class="mws-form-row">
                    <label class="mws-form-label">Job Type Name</label>
                    <div class="mws-form-item">
                        @Html.TextBoxFor(model => model.JobTypeName, new { @class = "required large" })
                        @Html.ValidationMessageFor(model => model.JobTypeName)
                    </div>
                </div>
            </div>
            <div class="mws-form-inline">
                <div class="mws-form-row">
                    <label class="mws-form-label">Job Type Name Ar</label>
                    <div class="mws-form-item">
                        @Html.TextBoxFor(model => model.JobTypeNameAr, new { @class = "large" })
                        @Html.ValidationMessageFor(model => model.JobTypeNameAr)
                    </div>
                </div>
            </div>
            <div class="mws-form-inline">
                <div class="mws-form-row">
                    <label class="mws-form-label">Job Code</label>
                    <div class="mws-form-item">
                        @Html.TextBoxFor(model => model.JobCode, new { @class = "required large" })
                        @Html.ValidationMessageFor(model => model.JobCode)
                    </div>
                </div>
            </div>
            <div class="mws-form-inline">
                <div class="mws-form-row">
                    <label class="mws-form-label">Is Active</label>
                    <div class="mws-form-item">
                        @Html.CheckBox("IsActive", new { style = "float: left;margin-top: 9px;" })

                    </div>
                </div>
            </div>
            <div class="mws-button-row">
                <input type="submit" class="btn btn-info" value="Save Changes">
                @Html.ActionLink("Cancel", "JobType", "Settings", null, new { @class = "btn btn-danger" })
            </div>
        }

    </div>
</div>
