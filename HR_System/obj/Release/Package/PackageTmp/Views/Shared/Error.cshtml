@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
    Layout = "~/Views/Shared/Main_Layout.cshtml";
}

<style type="text/css">
    .alignCenter {
        margin: 7px auto;
    }

    .width400 {
        width: 400px;
    }

    .alert {
        position: fixed;
        top: 64px;
        z-index: 999;
        right: 30px;
    }
</style>

@if (TempData["success"] != null)
{


    <div class="alert alert-success  width400 fade in alignCenter">
        <a href="#" class="close" data-dismiss="alert">×</a>
        @TempData["success"].ToString()
    </div>
    
}
else if (TempData["error"] != null)
{
   
    <div class="alert alert-danger width400 fade in alignCenter" style="margin: 7px auto; width: 309px; margin-bottom: 26px;">
        <a href="#" class="close" data-dismiss="alert">×</a>
        @TempData["error"].ToString()
    </div>
    
}

<h2>
    Sorry, an error occurred while processing your request.
</h2>
