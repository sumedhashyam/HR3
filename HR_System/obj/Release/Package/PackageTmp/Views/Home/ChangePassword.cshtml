@model HR_System.Models.changePassword
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>



@{
    string employeeID = ViewBag.employeeID != null ? ViewBag.employeeID.ToString() : "";
}
<div class="mws-panel grid_8">
    <div class="mws-panel-header">
        <span style="width: 200px; display: inline-block;">Change Password</span>

    </div>
    <div class="mws-panel-body no-padding" style="position: relative">

        @using (Ajax.BeginForm("ChangePassword", "Home", null, new AjaxOptions { UpdateTargetId = "main-content" }, new { @class = "mws-form" }))
        {
            @Html.ValidationSummary(true)
            @Html.HiddenFor(a => a.userID)
            <div id="mws-validate-error" class="mws-form-message error" style="display: none;"></div>
            <div class="mws-form-inline">
                <div class="mws-form-row">
                    <label class="mws-form-label">Employee Name</label>
                    <div class="mws-form-item">
                        @ViewBag.EmployeeName
                    </div>
                </div>
                <div class="mws-form-row">
                    <label class="mws-form-label">New Password</label>
                    <div class="mws-form-item">
                        @Html.PasswordFor(a => a.NewPassword)
                        @Html.ValidationMessageFor(a => a.NewPassword)
                    </div>
                </div>
                <div class="mws-form-row">
                    <label class="mws-form-label">Confirm Password</label>
                    <div class="mws-form-item">
                        @Html.PasswordFor(a => a.ConfirmPassword)
                        @Html.ValidationMessageFor(a => a.ConfirmPassword)
                    </div>
                </div>

                <div class="mws-button-row">
                    <input type="submit" class="btn btn-info" />

                    <a onclick="hidePasswordView()" class="btn btn-danger">Cancel</a>
                </div>
            </div>
        }


    </div>
</div>


