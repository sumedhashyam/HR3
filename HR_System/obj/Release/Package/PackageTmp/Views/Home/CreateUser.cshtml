@model HR_System.Models.createUser
@{
    ViewBag.Title = "CreateUser";
    Layout = "~/Views/Shared/Main_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<style type="text/css">
    .mws-form .mws-form-row
    {
        padding: 10px 25px;
    }
</style>
<div class="mws-panel grid_8" style="text-align: right; box-shadow: none;">
    @* @Html.ActionLink("Back", "OfficeLocation", "Settings", null, new { @class = "btn btn-primary" })*@
</div>
<div class="mws-panel grid_8">
    <div class="mws-panel-header">
        <div class="toolbar">
            @Html.ActionLink("Back", "UserAccess", "Home", null, new { })
        </div>
        <span><i class="icon-ok"></i>Create User</span>
    </div>
    <div class="mws-panel-body no-padding">
        @using (Html.BeginForm("CreateUser", "Home", FormMethod.Post, new { @class = "mws-form", autocomplete = "off" }))
        {
            @Html.ValidationSummary(true)
            @Html.HiddenFor(a => a.employeeID)
       
            <div id="mws-validate-error" class="mws-form-message error" style="display: none;"></div>
            <div class="mws-form-inline">
                <form class="form-horizontal">

                    <div class="mws-form-row">
                        <label class="mws-form-label">Name</label>
                        <div class="mws-form-item">
                            @Model.Name
                        </div>
                    </div>
                    <div class="mws-form-row">
                        <label class="mws-form-label">Email</label>
                        <div class="mws-form-item">
                            @Model.Email
                            @Html.HiddenFor(a => a.Email)
                        </div>
                    </div>
                    <div class="mws-form-row">
                        <label class="mws-form-label">Username</label>
                        <div class="mws-form-item">
                            @Html.TextBoxFor(a => a.UserName)
                            @Html.ValidationMessageFor(a => a.UserName)
                        </div>
                    </div>
                    <div class="mws-form-row">
                        <label class="mws-form-label">Password</label>
                        <div class="mws-form-item">
                            @Html.PasswordFor(a => a.Password)
                            @Html.ValidationMessageFor(a => a.Password)
                        </div>
                    </div>
                    <div class="mws-form-row">
                        <label class="mws-form-label">Confirm Password</label>
                        <div class="mws-form-item">
                            @Html.PasswordFor(a => a.ConfirmPassword)
                            @Html.ValidationMessageFor(a => a.ConfirmPassword)
                        </div>
                    </div>

                    <div class="mws-form-row">
                        <label class="mws-form-label">Select Roles</label>
                        <div class="mws-form-item">

                            <label for="role_hr">@HR_System.Models.SiteRoles.HR.ToUpper()</label>
                            @Html.CheckBox("role_hr", false, new { style = "margin-right: 15px;" })
                            <label for="role_setup">@HR_System.Models.SiteRoles.Setup.ToUpper()</label>
                            @Html.CheckBox("role_setup", false, new { style = "margin-right: 15px;" })
                            <label for="role_admin">@HR_System.Models.SiteRoles.Admin.ToUpper()</label>
                            @Html.CheckBox("role_admin", false)
                        </div>
                    </div>

                    <div class="mws-form-row">

                        <div class="mws-form-item">
                            <button type="submit" class="btn btn-primary">Save</button>
                            @Html.ActionLink("Cancel", "UserAccess", new { }, new { @class = "btn" })
                        </div>
                    </div>
                </form>
            </div>   
    
   
    

        }
    </div>
</div>
