@model IEnumerable<DAO.Notification>
@using DAL;
@using DAO;

<script>
    applyDatatable();
</script>
<div class="mws-panel grid_8">
    <h1>All Notifications</h1>
</div>
<div class="mws-panel grid_8">
    <div class="mws-panel-header">
        <span style="width: 400px; display: inline-block;"><i class="icon-table"></i>Notifications          
        </span>
        <div class="toolbar">
            <a href="javascript:"><i class="icon-refresh" onclick="hr.loadNotifications();"></i></a>
        </div>
    </div>
    <div class="mws-panel-body no-padding">
        <table class="mws-datatable-fn hide-c mws-table">
            <thead>

                <tr>
                  <th></th>
                    <th>Message
                    </th>
                    <th>Notinfication Time
                    </th>
                    <th>
                        Seen
                    </th>
                    <th>
                    </th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        
                        <td></td>
                        <td>
                           @item.Message
                        </td>
                        <td>
                         @if (item.NotinficationTime.HasValue)
                         {
                             @item.NotinficationTime.Value.ToShortDateString()
                         }
                        </td>
                        <td>
                            @if (item.IsRead == true)
                            {
                                <a class="btn btn-info">Seen</a>
                            }
                           
                        </td>
                        <td>
                           <a href="@Url.Content(item.Url)" class="btn btn-info">View Detail</a>
                        </td>
                        
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

