                        <th>Holiday Date</th>
                           <th>Holiday Name</th>
                    </tr>
                </thead>

                <tbody role="alert" aria-live="polite" aria-relevant="all">
                    

                    @foreach (var item in Model.Where(a => a.Holiday != null))
                    {
                        
                        <tr>
                            <td>
                                @if (item.Holiday.HolidayDate != null)
                                {
  
                                    @item.Holiday.HolidayDate.ToString("dd-MMM-yyyy");
                                }
