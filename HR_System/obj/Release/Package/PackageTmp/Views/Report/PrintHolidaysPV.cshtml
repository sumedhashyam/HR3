@model IEnumerable<DAO.EmployeeHoilday>
@using DAO
@{
    Employee _Employee = ViewBag.Employee as Employee;
}
@{
    ViewBag.Title = "Holidays";
    Layout = "~/Views/Shared/PrintLayout.cshtml";
}
<link href="../../Content/print.css" rel="stylesheet" />
<img src="/images/mws-logo.png" alt="mws admin">
@{Html.RenderPartial("EmployeeDetail", _Employee);}
<div style="text-align: center">
    <h4>Employee Holidays of Year <span id="year">@ViewBag.year</span></h4>
    <span id="empid" style="display:none;">@ViewBag.EmployeeID</span>
</div>

<div class="mws-panel grid_8">
    <div class="mws-panel-header">
        <span style="width: 200px; display: inline-block;"><i class="icon-table"></i>&nbsp;</span>    
    </div>
    <div class="mws-panel-body no-padding">
        <table class="mws-datatable-fn mws-table">

            <thead>


                <tr>
                    <th>Holiday Date
                    </th>
                    <th>Holiday Title
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @if (item.Holiday != null){
                                @item.Holiday.HolidayDate.ToString("dd-MMM-yyyy")
                            }
                        </td>
                        <td>
                            @if (item.Holiday != null){
                                @item.Holiday.HolidayName
                            }
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
