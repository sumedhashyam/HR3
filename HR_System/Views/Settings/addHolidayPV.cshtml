@model DAO.Holiday
<div class="mws-panel grid_8">
    <div class="mws-panel-header">
        <span><i class="icon-ok"></i>Add New Holiday</span>
    </div>
    <div class="mws-panel-body no-padding">

        @using (Html.BeginForm("addHolidayPV", "Settings", FormMethod.Post, new { @class = "mws-form", @id = "formAddHolidayPV" }))
        {
            @Html.ValidationSummary(true)
            DateTime evdate = new DateTime();
          if (ViewBag._Date != null)
          {
              evdate =ViewBag._Date;
          }
            <div id="mws-validate-error" class="mws-form-message error" style="display: none;"></div>
            <div class="mws-form-inline">
                <div class="mws-form-row">
                    <label class="mws-form-label">Holiday Name</label>
                    <div class="mws-form-item">
                        @Html.TextBoxFor(model => model.HolidayName, new { @class = "required large" })
                        @Html.ValidationMessageFor(model => model.HolidayName)
                    </div>
                </div>
                <div class="mws-form-row">
                    <label class="mws-form-label">Holiday Date</label>
                    <div class="mws-form-item">
                        <input type="text" id="eventdate1" value="@evdate.ToString("dd/MM/yyyy")" disabled="disabled" class="required" />
                   <input type="hidden" id="eventdate" value="@evdate.ToShortDateString()" name="event_date"/>
                    </div>
                </div>

            </div>
            <div class="mws-button-row ">
                <input type="submit" class="btn btn-info" onclick="return hr.AddHolidays()" value="Save Changes">
                @* <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>*@
            </div>
        }

    </div>
</div>
