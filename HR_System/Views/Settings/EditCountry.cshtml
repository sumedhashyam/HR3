@model DAO.CountryOffice

@{
    ViewBag.Title = "EditCountry";
    Layout = "~/Views/Shared/Main_Layout.cshtml";
}
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
 @{Html.RenderPartial("Notification");}
@*<h2>Edit Country</h2>*@
<div class="mws-panel grid_8" style="text-align: right; box-shadow: none;">
   @* @Html.ActionLink("Back", "Country", "Settings", null, new { @class = "btn btn-primary" })*@
</div>
<div class="mws-panel grid_8">
    <div class="mws-panel-header">
          <div class="toolbar">
            @Html.ActionLink("Back", "Country", "Settings", null, new {@style = "margin-right:19px;" })
           </div>
        <span><i class="icon-ok"></i>Edit Country</span>
    </div>
    <div class="mws-panel-body no-padding">

        @using (Html.BeginForm("EditCountry", "Settings", FormMethod.Post, new { @class = "mws-form" }))
        {
            @Html.ValidationSummary(true)

           @Html.HiddenFor(model => model.CountryOfficeID)
            <div id="mws-validate-error" class="mws-form-message error" style="display: none;"></div>
            <div class="mws-form-inline">
                <div class="mws-form-row">
                    <label class="mws-form-label">Country Name</label>
                    <div class="mws-form-item">
                        @Html.TextBoxFor(model => model.CountryName, new { @class = "required large" })
                        @Html.ValidationMessageFor(model => model.CountryName)
                    </div>
                </div>
            </div>
            <div class="mws-button-row">
                <input type="submit" class="btn btn-info" value="Save Changes">
                  @Html.ActionLink("Cancel", "Country","Settings", null, new { @class="btn btn-danger"})
            </div>
        }

    </div>
</div>