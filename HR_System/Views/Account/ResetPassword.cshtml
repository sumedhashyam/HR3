@model HR_System.Models.ResetPasswordModel
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/Main_Layout.cshtml";
}


<h2>Reset Password</h2>
@{Html.RenderPartial("Notification");}
<div class="mws-panel grid_5">
    <div class="mws-panel-header">
        <span>Reset Password</span>
    </div>
    <div class="mws-panel-body no-padding">

        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "mws-form" }))
        {
            @Html.ValidationSummary(true)
     
            <div id="mws-validate-error" class="mws-form-message error" style="display: none;"></div>
            <div class="mws-form-inline">
                <div class="mws-form-row">
                    <label class="mws-form-label">User Name</label>
                    <div class="mws-form-item">
                        @Html.TextBoxFor(model => model.UserName, new { @class = "required" })
                        @Html.ValidationMessageFor(model => model.UserName)
                    </div>
                </div>


            </div>
            <div class="mws-button-row">
                <input type="submit" class="btn btn-info" />
                @Html.ActionLink("Cancel", "Index","Home", null, new { @class = "btn btn-danger" })
            </div>
        }

    </div>
</div>
