@model DAO.EmployeeLeaveRequest
@{
    ViewBag.Title = "leaveData";
    Layout = "~/Views/Shared/Main_Layout.cshtml";
}

<script src="../../js/core/mws.js"></script>
<script type="text/javascript">
    
    $(document).ready(function () {
        hr.loadAllLeaveReq('@DateTime.Now.Year');
       
    });
    collspan();
</script>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@{Html.RenderPartial("Notification");}


<div class="mws-panel grid_8 mws-collapsible mws-collapsed mws-form" @*style="margin-top: 35px;"*@>
        <div class="mws-panel-header">
            <span style="width: 200px; display: inline-block;">Filter Result</span>
        </div>
        <div class="mws-panel-body no-padding" style="position: relative">
            <div class="mws-form-inline">
                <div class="mws-form-row">

                    <div class="grid_2" style="/*padding: 20px*/ margin-left: 0px;">
                    <label @*style="display: inline-block;margin-right: 10px;"*@ class="mws-form-label">Select Year</label>
                    <div  @*style="display: inline-block;"*@ class="mws-form-item">
                        @Html.DropDownList("ddlYear", ViewBag.yearsList as List<SelectListItem>, new { onchange = "hr.loadAllLeaveReq(null)",style="width:220px" })
                    </div>
                </div>
                <div class="grid_2" style="/*padding: 20px*/ margin-left: 150px;">
                    <label  @*style="display: inline-block;margin-right: 10px;"*@ class="mws-form-label">Select Status</label>
                    <div  @*style="display: inline-block; width:220px;"*@ class="mws-form-item">
                        <select id="ddlstatus" onchange="hr.loadAllLeaveReq(null)" style="width:220px;" >
                            <option value="all">All</option>
                            <option value="pending">Pending</option>
                            <option value="approved">Approve</option>
                            <option value="disapproved">DisApprove</option>
                        </select>
                    </div>
                </div>
            </div>

            <div style="clear: both"></div>
        </div>
    </div>
</div>

<div class="mws-panel grid_8"></div>

<div id="main-content" class="row-fluid">
</div>


